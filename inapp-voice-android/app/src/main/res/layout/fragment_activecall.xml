<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/clActiveCall"
    android:tag="fragmentActiveCall"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingLeft="42dp"
    android:paddingRight="42dp">
    <ImageView
        android:id="@+id/ivPhone"
        android:layout_width="52dp"
        android:layout_height="52dp"
        android:src="@drawable/green_phone"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvTargetUser"
        android:contentDescription="@string/call_icon"
        >
    </ImageView>
    <TextView
        android:id="@+id/tvTargetUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text = "User 5"
        android:textSize="22sp"
        android:layout_marginTop="16dp"
        android:textColor="@color/black"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/ivPhone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/tvCallStatus"
        >
    </TextView>
    <TextView
        android:id="@+id/tvCallStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/answered"
        android:textSize="22sp"
        android:layout_marginTop="4dp"
        android:textColor="@color/dark_green"
        android:textAlignment="center"
        app:layout_constraintTop_toBottomOf="@+id/tvTargetUser"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/svCallActions"
        >
    </TextView>
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/svCallActions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="16dp"
        app:layout_constraintTop_toBottomOf="@+id/tvCallStatus"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >
        <Button
            android:id="@+id/btMute"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:backgroundTint="@color/dark_gray"
            android:layout_marginEnd="16dp"
            android:visibility="gone"
            android:drawableTop="@drawable/ic_baseline_mic_off_36"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/btSpeaker"
            app:layout_constraintStart_toStartOf="parent"
            />
        <Button
            android:id="@+id/btSpeaker"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:visibility="gone"
            android:backgroundTint="@color/dark_gray"
            android:layout_marginEnd="16dp"
            android:drawableTop="@drawable/ic_baseline_volume_up_36"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btMute"
            app:layout_constraintEnd_toStartOf="@+id/btHangUp"
            />
        <Button
            android:id="@+id/btHangUp"
            android:layout_width="0dp"
            android:layout_height="52dp"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:backgroundTint="@color/red"
            android:drawableTop="@drawable/ic_baseline_call_end_36"
            android:layout_gravity="center_horizontal"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/btSpeaker"
            app:layout_constraintEnd_toEndOf="parent"
            />
        </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>